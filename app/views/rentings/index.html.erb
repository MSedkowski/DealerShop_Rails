<p id="notice"><%= notice %></p>

<h1>Rentings</h1>

<table>
  <thead>
    <tr>
      <th>Car</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentings.each do |renting| %>
      <tr>
        <td><%= renting.car %></td>
        <td><%= renting.start_date %></td>
        <td><%= renting.end_date %></td>
        <td><%= renting.client %></td>
        <td><%= link_to 'Show', renting %></td>
        <td><%= link_to 'Edit', edit_renting_path(renting) %></td>
        <td><%= link_to 'Destroy', renting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

