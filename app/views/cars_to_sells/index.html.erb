<div class="main-field">
  <div class="row header-row">
    <h3 class="col s6 offset-s3" id="supply-list-header">Oferowane auta</h3>
  </div>
  <div class="row">
    <table class="striped col l10 offset-l1">
      <thead>
      <tr>
      <th>Marka</th>
      <th>Model</th>
      <th>Cena</th>
      <th>Dodatkowe informacje</th>
        <th>Nazwa zniżki</th>
        <th>Wartość zniżki</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars_to_sells.each do |cars_to_sell| %>
      <tr>
        <td><%= cars_to_sell.brand %></td>
        <td><%= cars_to_sell.model %></td>
        <td><%= cars_to_sell.price %></td>
        <td><%= cars_to_sell.additional_information %></td>
        <% cars_to_sell.discount.each do |discount| %>
        <td><%= discount.discount_name %></td>
          <td><%=discount.percentage_value %></td>
          <% end %>
        <td><%= link_to 'Edytuj', edit_cars_to_sell_path(cars_to_sell) %></td>
        <td><%= link_to 'Usuń', cars_to_sell, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

