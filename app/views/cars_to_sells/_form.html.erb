<div class="row add-supply-item">
<%= form_for @cars_to_sell do |form| %>
  <% if @cars_to_sell.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cars_to_sell.errors.count, "error") %> prohibited this cars_to_sell from being saved:</h2>

      <ul>
      <% @cars_to_sell.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row add-cars-to-sell">
      <div id="new-car-input" class="input-field col l3 offset-l1">
        <%= form.label :brand, "Podaj markę auta" %>
    <%= form.text_field :brand, id: :cars_to_sell_brand %>
        <label for="cars_to_sell_brand" generated="true" class="error error_label"></label>
  </div>

      <div id="new-car-input" class="input-field col l3">
        <%= form.label :model, "Podaj model auta" %>
    <%= form.text_field :model, id: :cars_to_sell_model %>
        <label for="cars_to_sell_model" generated="true" class="error error_label"></label>
  </div>

      <div id="new-car-input" class="input-field col l1">
        <%= form.label :price, "Podaj cenę auta" %>
    <%= form.text_field :price, id: :cars_to_sell_price %>
        <label for="cars_to_sell_price" generated="true" class="error error_label"></label>
  </div>

      <div id="new-car-input" class="input-field col l3">
        <%= form.label :additional_information, "Podaj dodatkowe informację" %>
    <%= form.text_field :additional_information, id: :cars_to_sell_additional_information %>
        <label for="cars_to_sell_additional_information" generated="true" class="error error_label"></label>
  </div>
    </div>
  <div class="row add-cars-to-sell">
    <div class="btn right">
          <span>
            <%= link_to 'Anuluj', cars_to_sells_path %>
            <i class="material-icons right">cancel</i>
          </span>
    </div>
    <button id="submit-button" class="btn waves-effect waves-light right" type="submit" name="action">
      <i id="submit-icon" class="material-icons right">send</i>
      <%= form.submit 'Zapisz'%>

    </button>
  </div>
<% end %>
</div>
<script>
    $(document).ready(function() {
        <%= render "validate.js" %>
    });
    $(document).on('page:load', function() {
        <%= render "validate.js" %>
    });
</script>
