<div class="main-field">
  <div class="row header-row">
    <h3 class="col s6 offset-s3" id="supply-list-header">Lista klientów</h3>
  </div>
  <div class="row">
    <table class="striped col l12">
      <thead>
        <tr>
          <th>Imię</th>
          <th>Nazwisko</th>
          <th>Email</th>
          <th>Numer telefonu</th>
          <th>Pracownik</th>
          <th>Korzysta z wypożyczalni?</th>
          <th>Korzysta z serwisu?</th>
          <th>Zamówił auto?</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.surname %></td>
          <td><%= client.email %></td>
          <td><%= client.phone_number %></td>
          <td><% if (client.employee.nil?()) %>
              <%= 'Brak' %>
              <% else %>
              <%= client.employee.combined_value %>
              <% end %></td>
          <td><% if (client.use_renting) %>
              <%= 'Tak' %>
              <% else %>
              <%= 'Nie' %>
              <% end %></td>
          <td><% if (client.use_service) %>
              <%= 'Tak' %>
            <% else %>
              <%= 'Nie' %>
            <% end %></td>
          <td><% if (client.buy_car) %>
              <%= 'Tak' %>
            <% else %>
              <%= 'Nie' %>
            <% end %></td>
          <td><%= link_to 'Edytuj', edit_client_path(client) %></td>
          <td><%= link_to 'Usuń', client, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>

