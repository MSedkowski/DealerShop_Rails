<div class="main-field">
  <div class="row header-row">
    <h3 class="col s6 offset-s3" id="supply-list-header">Stany magazynowe</h3>
  </div>
  <div class="row">
    <table class="striped col l10 offset-l1">
      <thead>
      <tr>
        <th>Nazwa elementu</th>
        <th>Ilość</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @warehouses.each do |warehouse| %>
        <tr>
          <td><%= warehouse.element %></td>
          <td><%= warehouse.amount %></td>
          <td><%= warehouse.status %></td>
          <td class="link"><%= link_to 'Edycja', edit_warehouse_path(warehouse) %></td>
          <td class="link"><%= link_to 'Usuń', warehouse, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
