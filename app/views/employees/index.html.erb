<div class="main-field">
  <div class="row header-row">
    <h3 class="col s6 offset-s3" id="supply-list-header">Lista pracowników</h3>
  </div>
  <div class="row">
    <table class="striped col l12">
      <thead>
    <tr>
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Telefon</th>
      <th>Hasło</th>
      <th>Pozycja</th>
      <th>Pensja</th>
      <th>Płatne wolne</th>
      <th>Data zatrudnienia</th>
      <th>Premie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.surname %></td>
        <td><%= employee.email %></td>
        <td><%= employee.phone_number %></td>
        <td><%= employee.password %></td>
        <td><%= employee.position %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.days_of_paid_leave %></td>
        <td><%= employee.date_of_employment %></td>
        <td><%= employee.bonuses %></td>
        <td><%= link_to 'Pokaż', employee %></td>
        <td><%= link_to 'Edytuj', edit_employee_path(employee) %></td>
        <td><%= link_to 'Usuń', employee, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>