<div class="main-field">
  <div class="row header-row">
    <h3 class="col s6 offset-s3" id="supply-list-header">Urlopy</h3>
  </div>
  <div class="row">
    <table class="striped col l10 offset-l1">
      <thead>
    <tr>
      <th>Pracownik</th>
      <th>Data rozpoczęcia</th>
      <th>Data zakończenia</th>
      <th>Liczba dni</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacations.sort.each do |vacation| %>
      <tr>
        <td><%= vacation.employee.combined_value %></td>
        <td><%= vacation.start_date %></td>
        <td><%= vacation.end_date %></td>
        <td><%= vacation.how_many_days %></td>
        <td><%= link_to 'Edytuj', edit_vacation_path(vacation) %></td>
        <td><%= link_to 'Usuń', vacation, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
