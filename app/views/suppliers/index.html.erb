<div class="main-field">
  <div class="row">
    <h3 class="col l6 offset-l3" id="supplier-list-header">Dostawcy</h3>
  </div>
  <div class="row">
    <table class="striped col l10 offset-l1">
  <thead>
    <tr>
      <th>Dane</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.data %></td>
        <td><%= link_to 'Pokaż', supplier %></td>
        <td><%= link_to 'Edytuj', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Usuń', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

