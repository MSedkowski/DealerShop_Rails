<div class="main-field">
  <div class="row header-row">
    <h3 class="col s6 offset-s3" id="supply-list-header">Usługi</h3>
  </div>
  <div class="row">
    <table class="striped col l10 offset-l1">
      <thead>
      <tr>
      <th>Nazwa</th>
      <th>Cena</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faults.each do |fault| %>
      <tr>
        <td><%= fault.name %></td>
        <td><%= fault.price %></td>
        <td><%= link_to 'Edytuj', edit_fault_path(fault) %></td>
        <td><%= link_to 'Usuń', fault, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>